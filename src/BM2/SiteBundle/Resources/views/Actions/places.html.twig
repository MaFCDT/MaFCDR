{% extends "BM2SiteBundle::layout.html.twig" %}

{% block content %}
<button id="style">toggle list style</button>
<div id="actionlist" class="boxlist">
{% include "BM2SiteBundle:element:linklist.html.twig" with {"list":dispatcher.placesActions, "domain":'places', "who":'self'} %}
</div>

<br class="clear" />
<hr />

<div class="act">
	<h2>{{ 'lists.name'|trans({},"politics")|title }}</h2>
	<div class="act_actions">
		<a href="{{ path("bm2_lists") }}">{{ 'lists.name'|trans({},"places")|title }}</a>
	</div>
		{{ 'lists.description'|trans({},"politics")|raw }}
</div>

{% endblock %}

{% block jquery %}
var box = true;
$("#style").click(function(){
	box = !box;
	if (box) {
		$("#actionlist").removeClass("linklist").addClass("boxlist");
	} else {
		$("#actionlist").removeClass("boxlist").addClass("linklist");	
	}
});
{% endblock %}
