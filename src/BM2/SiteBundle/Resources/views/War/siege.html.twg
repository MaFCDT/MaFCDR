{% extends "BM2SiteBundle::layout.html.twig" %}

{% block content %}
	<h2>{{ "military.settlement.siege.name"|trans({},"actions")|title }}</h2>
	{% if siege %}
		{# Build siege display! #}
		<p>{{ "military.settlement.siege.active"|trans({"%settlement%":settlement.name}, "actions")|raw }}
		{{ form(form) }}
	{% else %}
		<p>{{ "military.settlement.siege.inactive"|trans({"%settlement%":settlement.name},"actions")|raw }}</p>
		{{ form(form) }}
	{% endif %}

{% endblock %}
